<div class="container mt-5">
    <div class="row">
		<div class="col">
    		<div class="p-5 login m-auto">
			  	<div class="mb-5">
			    	<h3 class="panel-title">Register</h3>
                    <p>Please create an account to continue</p>
			 	</div>
			  	<div class="">
			    	<form accept-charset="UTF-8" role="form" action="/api/users/register" method="POST">
                    <fieldset>
			    	  	<div class="form-group">
			    		    <input class="form-control" placeholder="E-mail" name="email" type="email" required>
			    		</div>
			    		<div class="form-group">
			    			<input class="form-control" placeholder="Password" id="newPassword" name="password" type="password" value="" required minlength="8">
			    		</div>
                        <div class="form-group">
			    			<input class="form-control" placeholder="Confirm Password" id="confirmPassword" name="confirmPassword" type="password" value="" required>
			    		</div>
                        {{#if error}}
                            <div class="alert alert-dismissible alert-warning">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Whoops!</strong> {{error}}
                            </div>
                        {{/if}}
			    		<input class="mt-4 mb-4 btn btn-lg btn-success btn-block" type="submit" value="Create Account">
			    	</fieldset>
			      	</form>
                      <small>Already have an account? <a href="/login">Log in</a></small>
			    </div>
			</div>
		</div>
	</div>
</div>
